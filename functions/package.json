{
  "name": "functions",
  "scripts": {
    "ci": "rm -rf ./node_modules && yarn install && typesync && yarn install --ignore-scripts",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "config": "firebase functions:config:get > .runtimeconfig.json",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase": "^9.0.2",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.15.6",
    "shopify-token": "^4.0.4"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.1.2",
    "typesync": "^0.8.0"
  },
  "private": true
}
